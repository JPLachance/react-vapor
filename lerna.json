{
    "version": "8.0.10",
    "packages": ["packages/*"],
    "command": {
        "publish": {
            "conventionalCommits": true,
            "allowBranch": ["master"]
        },
        "version": {
            "conventionalCommits": true,
            "message": "chore(release): [version bump] - %s"
        },
        "bootstrap": {
            "hoist": true,
            "nohoist": ["unidiff", "query-string", "strict-uri-encode", "split-on-first"]
        }
    }
}
