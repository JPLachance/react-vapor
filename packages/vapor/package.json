{
    "name": "coveo-styleguide",
    "version": "4.0.1",
    "description": "Yet another CSS framework - but it's awesome & built by Coveo.",
    "keywords": [
        "coveo",
        "styleguide",
        "css",
        "front-end",
        "web"
    ],
    "homepage": "http://vapor.surge.sh/",
    "author": "Coveo",
    "license": "MIT",
    "main": "dist/js/VaporSVG.js",
    "scripts": {
        "clean": "gulp clean",
        "build": "gulp docs",
        "buildpages": "next build && next export",
        "start": "concurrently \"npm run build && next\" \"gulp watch\"",
        "version": "gulp clean && npm run build",
        "reconstruct": "gulp clean --all && npm install && gulp",
        "lintfix": "stylelint './scss/**/*.scss' --fix && prettier --write './*.@(json|yml|js|md)' './scss/**/*.scss' './resources/js/**/*.js'"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/coveo/react-vapor.git"
    },
    "dependencies": {
        "chosen-npm": "1.4.2",
        "coveo-slider": "1.0.1",
        "materialize-css": "0.98.2"
    },
    "devDependencies": {
        "@zeit/next-sass": "1.0.1",
        "acorn": "^6.0.0",
        "ansi-colors": "3.2.4",
        "autosize": "3.0.21",
        "concurrently": "4.0.1",
        "coveo-png-sprite": "1.0.1",
        "del": "3.0.0",
        "fancy-log": "1.3.3",
        "file-loader": "4.0.0",
        "gulp": "4.0.0",
        "gulp-autoprefixer": "5.0.0",
        "gulp-cheerio": "0.6.3",
        "gulp-clean-css": "4.0.0",
        "gulp-concat": "2.6.1",
        "gulp-file-insert": "2.0.0",
        "gulp-files-to-json": "0.2.1",
        "gulp-gzip": "1.4.1",
        "gulp-if": "2.0.2",
        "gulp-json-sort": "1.0.0",
        "gulp-rename": "1.2.2",
        "gulp-sass": "4.0.2",
        "gulp-sourcemaps": "2.6.5",
        "gulp-svgmin": "1.2.4",
        "gulp-uglify": "3.0.0",
        "husky": "2.3.0",
        "lint-staged": "8.1.7",
        "merge-stream": "1.0.1",
        "minimist": "1.2.0",
        "next": "8.1.0",
        "next-react-svg": "1.0.0",
        "node-sass": "4.12.0",
        "plugin-error": "1.0.1",
        "prettier": "1.17.1",
        "react": "16.8.6",
        "react-dom": "16.8.6",
        "react-syntax-highlighter": "10.3.0",
        "resolve-url-loader": "3.1.0",
        "style-loader": "0.23.1",
        "stylelint": "10.0.1",
        "stylelint-config-prettier": "5.2.0",
        "stylelint-config-rational-order": "0.1.2",
        "stylelint-order": "3.0.0",
        "stylelint-prettier": "1.1.1",
        "svg-react-loader": "0.4.6",
        "underscore": "1.9.1",
        "underscore.string": "3.3.5"
    },
    "files": [
        "dist",
        "gulpTasks",
        "scss/**/*.scss",
        "lib",
        "resources",
        "gulpfile.js",
        "LICENSE"
    ],
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": false,
        "arrowParens": "always"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,scss,json,md,yml}": [
            "npm run lintfix",
            "git add"
        ]
    },
    "stylelint": {
        "extends": [
            "stylelint-prettier/recommended",
            "stylelint-config-rational-order"
        ]
    }
}
