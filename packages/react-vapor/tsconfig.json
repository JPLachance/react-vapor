{
    "extends": "../tsconfig-base",
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "plugins": [
            {
                "transform": "ts-transformer-keys/transformer"
            }
        ],
        "lib": ["es2015", "dom"]
    },
    "exclude": ["node_modules", "dist", "docs/dist", "coverage", "*.js"]
}
