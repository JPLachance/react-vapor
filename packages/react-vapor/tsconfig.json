{
    "extends": "../tsconfig-base",
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "lib": ["es2015", "dom"]
    },
    "exclude": ["**/node_modules", "**/dist", "**/coverage", "*.js", "**/target"]
}
