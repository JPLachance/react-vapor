{
    "name": "root",
    "private": true,
    "devDependencies": {
        "@commitlint/cli": "8.3.5",
        "@commitlint/config-conventional": "8.3.4",
        "@commitlint/travis-cli": "8.3.5",
        "aws-sdk": "2.576.0",
        "axios": "0.19.0",
        "cz-conventional-changelog": "3.0.2",
        "husky": "3.0.9",
        "lerna": "3.18.4",
        "lint-staged": "9.4.2",
        "prettier": "1.19.1",
        "stylelint": "11.1.1",
        "tsjs": "1.0.x",
        "tslint": "5.20.1",
        "underscore": "1.9.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "**/*.scss": [
            "stylelint --fix",
            "prettier --write",
            "git add"
        ],
        "**/*.{ts,tsx}": [
            "prettier --write",
            "tslint -c ./tslint.json -p ./packages/react-vapor/tsconfig.json --fix",
            "git add"
        ],
        "**/*.{js,jsx,json,md,yml,html}": [
            "prettier --write",
            "git add"
        ]
    },
    "stylelint": {
        "extends": [
            "tsjs/stylelint-config"
        ]
    },
    "prettier": "tsjs/prettier-config",
    "browserslist": [
        "cover 90%",
        "last 1 versions",
        "IE 11",
        "not dead"
    ],
    "scripts": {
        "postinstall": "lerna bootstrap --no-ci",
        "start": "lerna run start --parallel",
        "test": "lerna run test --parallel",
        "build": "lerna run build --parallel",
        "lintfix": "stylelint --fix \"**/*.scss\" && prettier --write \"**/*.{scss,json,js,jsx,ts,tsx,md}\" && tslint -c ./tslint.json -p ./packages/react-vapor/tsconfig.json --fix",
        "commit-cli": "git-cz"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
