{
    "name": "root",
    "private": true,
    "devDependencies": {
        "axios": "0.19.0",
        "husky": "3.0.9",
        "lerna": "3.18.4",
        "lint-staged": "9.4.2",
        "prettier": "1.19.1",
        "stylelint": "11.1.1",
        "tsjs": "1.0.x",
        "tslint": "5.20.1",
        "underscore": "1.9.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.scss": [
            "stylelint --fix",
            "prettier --write",
            "git add"
        ],
        "**/*.{ts,tsx}": [
            "prettier --write",
            "tslint -c ./tslint.json -p ./packages/react-vapor/tsconfig.json --fix",
            "git add"
        ],
        "**/*.{js,jsx,json,md,yml,html}": [
            "prettier --write",
            "git add"
        ]
    },
    "stylelint": {
        "extends": [
            "tsjs/stylelint-config"
        ]
    },
    "prettier": "tsjs/prettier-config",
    "browserslist": [
        "cover 90%",
        "last 1 versions",
        "IE 11",
        "not dead"
    ],
    "scripts": {
        "start": "lerna run start --parallel",
        "test": "lerna run test --parallel",
        "lintfix": "stylelint --fix \"**/*.scss\" && prettier --write \"**/*.{scss,json,js,jsx,ts,tsx,md}\" && tslint -c ./tslint.json -p ./packages/react-vapor/tsconfig.json --fix"
    }
}
