{
    "name": "root",
    "private": true,
    "devDependencies": {
        "@commitlint/cli": "8.3.5",
        "@commitlint/config-conventional": "8.3.4",
        "@commitlint/travis-cli": "8.3.5",
        "@sindresorhus/slugify": "0.11.0",
        "@testing-library/cypress": "^7.0.4",
        "aws-sdk": "2.576.0",
        "axios": "^0.21.1",
        "cypress": "^6.8.0",
        "cz-conventional-changelog": "3.0.2",
        "eslint": "7.5.0",
        "husky": "4.2.5",
        "lerna": "3.18.4",
        "mime-types": "2.1.26",
        "prettier": "2.0.5",
        "stylelint": "13.6.1",
        "tsjs": "^3.0.2",
        "underscore": "1.12.1",
        "walkdir": "0.4.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lerna run --concurrency 1 --stream precommit",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "stylelint": {
        "extends": [
            "tsjs/stylelint-config"
        ]
    },
    "prettier": "tsjs/prettier-config",
    "browserslist": [
        "cover 90%",
        "last 1 versions",
        "IE 11",
        "not dead"
    ],
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "setup": "pnpm install",
        "start": "pnpm build --stream --filter=coveo-styleguide && pnpm -r start --parallel --filter=\\!react-vapor",
        "test": "pnpm -r test --parallel",
        "clean": "pnpm -r clean --parallel",
        "build": "pnpm -r build --stream",
        "lintfix": "pnpm -r lintfix --parallel",
        "commit-cli": "git-cz",
        "reconstruct": "npx rimraf node_modules && npm run setup && echo done"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
